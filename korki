a = int(input("podaj 1 liczbe "))
b = int(input("podaj 2 liczbe "))
c = int(input("podaj 3 liczbe "))

print("suma wynosi", (a+b+c))

if a < b and c < b: # b jest najwieszke
    if a>c:
        print(b,a,c)
    else:
        print(b,c,a)


# dokonczyc dla najwieskszego c i a   --->
if a < b and c < b: # b jest najwieszke
    if a>c:
        print(b,a,c)
    else:
        print(b,c,a)

if a < b and c < b: # b jest najwieszke
    if a>c:
        print(b,a,c)
    else:
        print(b,c,a)
