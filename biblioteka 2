Biblioteka = {
    'klucz' : 'wartosc',
    'klucz1' : "wartosc1",
    'klucz2' : 'wartosc2'
}
import inf

import edycja

def edycja_listy(lst):
    while True:
        print(lst)
        print("a - dodaj element")
        print('b - usun element')
        print('e - exit edycja list')
        inp = input()
        if 'a' == inp:
            lst = float(input())
            lst.append(lst)
            print("ocena dodana")
        elif 'b' == inp:
            lst = float(input())
            lst.remove(lst)
            print("ocena usunieta")
        elif "e" == inp:
            break
        else:
            break

