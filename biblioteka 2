    inp= input()
    inp[dc] = input("podaj nowy klucz")

kod 4 
import edycja
import inf
import main
from main import Biblioteka

while True:
    print('e - exit')
    print('ed - edycja')
    print('i = inf')
    inp = input().lower()
    if 'e' == inp:
        break
    elif'ed' == inp:
        edycja(Biblioteka)
    elif 'i' == inp:
        inf(Biblioteka)
    else: 
        break
    
